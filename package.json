{
  "name": "ztmm-assessment",
  "version": "1.3.3",
  "type": "module",
  "author": "Cameron McCormick",
  "license": "AGPL-3.0",
  "description": "A ZTMM assessment application built with Angular and IndexedDB",
  "scripts": {
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless --code-coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "lint:check": "eslint --print-config eslint.config.cjs",
    "type-check": "tsc --noEmit",
    "deploy:gh-pages": "ng build --configuration production --base-href /ztmm-assessment/ && npx angular-cli-ghpages --dir=dist",
    "security:test": "ng test --include='**/security/**/*.spec.ts' --watch=false --browsers=ChromeHeadless",
    "security:test:watch": "ng test --include='**/security/**/*.spec.ts'",
    "security:penetration": "ng test --include='**/security/penetration-tests.spec.ts' --watch=false --browsers=ChromeHeadless",
    "security:owasp": "ng test --include='**/security/security-tests.spec.ts' --watch=false --browsers=ChromeHeadless",
    "security:audit": "npm audit --audit-level moderate",
    "security:codeql": "scripts/codeql-local.sh",
    "security:validate": "scripts/validate-codeql.sh",
    "security:full": "npm run security:audit && npm run security:test",
    "ci:full": "npm ci && npm run lint && npm run test:ci && npm run security:test",
    "ci:validate": "scripts/validate-ci.sh"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@types/jspdf": "^1.3.3",
    "bootstrap": "^5.3.6",
    "bootstrap-icons": "^1.13.1",
    "html2canvas": "^1.4.1",
    "idb": "^8.0.3",
    "jspdf": "^3.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.14",
    "@angular/cli": "^19.2.14",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "angular-cli-ghpages": "^2.0.3",
    "angular-eslint": "19.7.1",
    "eslint": "^9.28.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^59.0.1",
    "fake-indexeddb": "^6.0.1",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.33.1"
  }
}
